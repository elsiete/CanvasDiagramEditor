    <!-- templates -->

    <ControlTemplate x:Key="PinThumbControlTemplateKey">
        <Ellipse Style="{StaticResource PinEllipseStyleKey}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="PinControlThumbControlTemplateKey">
        <Ellipse Style="{StaticResource PinControlEllipseStyleKey}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="PinControlTemplateKey">
        <elements:PinControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="InputControlTemplateKey">
        <elements:InputControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="OutputControlTemplateKey">
        <elements:OutputControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="AndGateControlTemplateKey">
        <elements:AndGateControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="OrGateControlTemplateKey">
        <elements:OrGateControl/>
    </ControlTemplate>

