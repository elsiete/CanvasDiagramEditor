<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CanvasDiagramEditor" 
        x:Class="CanvasDiagramEditor.MainWindow"
        Title="Canvas Diagram Editor" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Normal"
        SnapsToDevicePixels="True" UseLayoutRounding="True">
    
    <Window.Resources>
        
        <ContextMenu x:Key="DiagramCanvasContextMenuKey">
            <MenuItem x:Name="InsertInput" Header="Insert _Input" Click="InsertInput_Click"/>
            <MenuItem x:Name="InsertOutput" Header="Insert _Output" Click="InsertOutput_Click"/>
            <Separator/>
            <MenuItem x:Name="InsertAndGate" Header="Insert _AndGate" Click="InsertAndGate_Click"/>
            <MenuItem x:Name="InsertOrGate" Header="Insert O_rGate" Click="InsertOrGate_Click"/>
            <Separator/>
            <MenuItem x:Name="InsertPin" Header="Insert _Pin" Click="InsertPin_Click"/>
            <Separator/>
            <MenuItem x:Name="DeleteElement" Header="_Delete" Click="DeleteElement_Click"/>
        </ContextMenu>
        
    </Window.Resources>

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="DiagramCanvas"
                Width="765" Height="645" 
                Grid.Column="0" Grid.Row="0"
                Background="{DynamicResource LogicBackgroundColorKey}" 
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                PreviewMouseLeftButtonDown="Canvas_PreviewMouseLeftButtonDown"
                MouseMove="Canvas_MouseMove"
                PreviewMouseRightButtonDown="Canvas_PreviewMouseRightButtonDown"
                ContextMenu="{StaticResource DiagramCanvasContextMenuKey}">
        </Canvas>

        <Grid Grid.Column="1" Grid.Row="0">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Grid.Row="0">
                <Button x:Name="OpenModel" Content="_Open Model" Margin="2" Click="OpenModel_Click"/>
                <Button x:Name="SaveModel" Content="_Save Model" Margin="2" Click="SaveModel_Click"/>
                <Separator Margin="2"/>
                <CheckBox x:Name="EnableSnap" Content="Enable S_nap to Grid" Margin="2" Click="EnableSnap_Click"/>
                <Separator Margin="2"/>
                <Button x:Name="ClearModel" Content="_Clear Model" Margin="2" Click="ClearModel_Click"/>
                <Separator Margin="2"/>
                <Button x:Name="GenerateModel" Content="_Generate Model" Margin="2" Click="GenerateModel_Click"/>
                <Button x:Name="ParseModel" Content="_Parse Model" Margin="2" Click="ParseModel_Click"/>
            </StackPanel>

            <TextBox x:Name="model" Grid.Row="1" 
                     AcceptsReturn="True" AcceptsTab="True" 
                     VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                     Margin="2" Padding="2"
                     VerticalScrollBarVisibility="Auto">
            </TextBox>

        </Grid>
    
    </Grid>
    
</Window>
