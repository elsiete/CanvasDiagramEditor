        <Setter Property="FontSize" Value="9"/>
        <Setter Property="FontWeight" Value="Thin"/>
        <Setter Property="Foreground" Value="{DynamicResource LogicTemplateColorKey}"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
    </Style>

    <Style x:Key="TableTextBlockStyleKey" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource LogicTemplateColorKey}"/>
        <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- templates -->

    <ControlTemplate x:Key="PinThumbControlTemplateKey">
        <Ellipse Style="{StaticResource PinEllipseStyleKey}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="PinControlThumbControlTemplateKey">
        <Ellipse Style="{StaticResource PinControlEllipseStyleKey}"/>
    </ControlTemplate>

    <ControlTemplate x:Key="PinControlTemplateKey">
        <elements:PinControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="InputControlTemplateKey">
        <elements:InputControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="OutputControlTemplateKey">
        <elements:OutputControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="AndGateControlTemplateKey">
        <elements:AndGateControl/>
    </ControlTemplate>

    <ControlTemplate x:Key="OrGateControlTemplateKey">
        <elements:OrGateControl/>
    </ControlTemplate>

