<UserControl x:Class="CanvasDiagram.WPF.Elements.PinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:CanvasDiagram.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="8" d:DesignWidth="8">

    <Canvas x:Name="RootElement" Width="8" Height="8" Style="{StaticResource PinControlCanvasStyleKey}">

        <controls:PinThumb x:Name="MiddlePin" Uid="MiddlePin" Canvas.Left="0" Canvas.Top="0" 
                           Template="{StaticResource PinControlThumbControlTemplateKey}"
                           Style="{StaticResource PinThumbStyleKey}"/>

    </Canvas>

</UserControl>
